<h2>Edit the movie:</h2>

<div>
    <form action="/movies/{{movie.id}}/edit" method="POST">
        <input type="text"  name="title" placeholder="Movie Title" value="{{movie.title}}"/>
        <input type="text" name="genre" placeholder="Genre" value="{{movie.genre}}"/>
        <textarea type="text" name="plot" placeholder="Plot">{{movie.plot}}"</textarea>
        <label for="cast" class="form-label" value="{{movie.cast}}">Cast</label>
        <select name="cast" multiple>
            {{#each celebrities as |celebrity|}}
            <option value="{{celebrity.id}}"> {{celebrity.name}}
            </option>
            {{/each}}
        </select>
        <button type="submit" class="btn btn-primary">Edit Movie!</button>
    </form>
</div> 